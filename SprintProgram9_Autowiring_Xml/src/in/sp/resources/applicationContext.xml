<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="in.sp.beans.Address" id = "address">
    <property name="homeNo" value="102" />
    <property name="addressLine" value="Street Line" />
    <property name="zipCode" value="98765" />
    </bean>
    
    <bean class="in.sp.beans.Student" id = "stdId" autowire="byName">
    <property name="id" value="10" />
    <property name="name" value="Diva" />
    
    </bean>

</beans>